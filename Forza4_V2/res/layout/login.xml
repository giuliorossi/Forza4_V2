<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="332dp"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="294dp"
        android:layout_height="250dp" >

        <TextView
            android:id="@+id/usertxView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="@string/Username"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/etextUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/usertxView"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:hint="Username" />

        <TextView
            android:id="@+id/passtxView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/usertxView"
            android:layout_below="@+id/etextUser"
            android:layout_marginTop="14dp"
            android:text="@string/Password"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/etextPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/etextUser"
            android:layout_alignRight="@+id/etextUser"
            android:layout_below="@+id/passtxView"
            android:hint="Password"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btnJoin"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etextPass"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp"
            android:text="@string/Join" />

    </RelativeLayout>

</LinearLayout>